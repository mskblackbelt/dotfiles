#!/bin/sh
#
# check for runaway distnoted, kill if necessary
#

set -euo pipefail
IFS=$'\n\t'

PATH=/bin:/usr/bin
export PATH

ps -reo '%cpu,uid,pid,command' | 
    awk -v UID=$UID '
    /distnoted agent$/ && $1 >= 100.0 && $2 == UID { 
        # kill distnoted agent with >= 100% CPU and owned by me
        system("kill -9 " $3) 
    }
    '